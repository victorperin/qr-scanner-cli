{
  "name": "qr-scanner-cli",
  "version": "0.2.2-development",
  "description": "",
  "main": "index.js",
  "bin": {
    "qrscanner": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "!*.test.*",
    "!__mocks__"
  ],
  "scripts": {
    "start": "tsc -b && node ./dist/cli/index.js",
    "test": "tsc -b && jest",
    "test:coverage": "tsc -b && jest --coverage && cat ./coverage/lcov.info | coveralls",
    "pretest": "eslint .",
    "test:diff": "tsc -b && jest --no-cache --passWithNoTests --collectCoverage=false --findRelatedTests",
    "build": "tsc -b && pkg . -t node10-linux-x64,node10-macos-x64,node10-win-x64 --out-path ./bin",
    "semantic-release": "semantic-release",
    "coverage": "http-server coverage/lcov-report/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "boxen": "^4.1.0",
    "chalk": "^2.4.2",
    "clipboardy": "^2.1.0",
    "common-tags": "^1.8.0",
    "fs-extra": "^8.1.0",
    "jimp": "^0.8.5",
    "meow": "^5.0.0",
    "open": "^7.0.0",
    "qrcode-reader": "^1.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-angular": "^8.2.0",
    "@types/common-tags": "^1.8.0",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.19",
    "@types/jimp": "^0.2.28",
    "@types/meow": "^5.0.0",
    "@types/node": "^12.11.5",
    "@typescript-eslint/parser": "^2.5.0",
    "coveralls": "^3.0.7",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "execa": "^3.0.0",
    "http-server": "^0.11.1",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "pkg": "^4.4.0",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.24",
    "ts-jest": "^24.1.0",
    "typescript": "^3.8.0-dev.20191023"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/victorperin/qr-scanner-cli.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "lint-staged": {
    "./**/*.ts": [
      "eslint",
      "npm run test:diff"
    ]
  }
}
